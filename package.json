{
  "name": "koa-github-hook-handler",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "type": "module",
  "main": "./src/hook-handler.mjs",
  "exports": {
    ".": "./src/hook-handler.mjs"
  },
  "description": "handle github/gitea/bitbucket webhook requests",
  "keywords": [
    "bitbucket",
    "gitea",
    "github",
    "hook",
    "koa"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m tests/*.mjs && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme ./src/hook-handler.mjs --section=API",
    "lint": "npm run lint:docs",
    "lint:docs": "documentation lint ./src/hook-handler.mjs"
  },
  "dependencies": {
    "raw-body": "^2.4.1"
  },
  "devDependencies": {
    "ava": "^3.13.0",
    "c8": "^7.3.5",
    "documentation": "github:arlac77/documentation",
    "got": "^11.8.0",
    "koa": "^2.11.0",
    "koa-better-router": "^2.1.1",
    "semantic-release": "^17.3.0",
    "x-hub-signature": "^1.2.0"
  },
  "engines": {
    "node": ">=12.19.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/koa-github-hook-handler.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/koa-github-hook-handler/issues"
  },
  "homepage": "https://github.com/arlac77/koa-github-hook-handler#readme",
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-esm-only"
    ]
  }
}
