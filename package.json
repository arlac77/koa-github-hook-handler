{
  "name": "koa-github-hook-handler",
  "version": "0.0.0-semantic-release",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "main": "src/hook-handler.mjs",
  "module": "src/hook-handler.mjs",
  "description": "handle github/gitea webhook requests",
  "keywords": [
    "github",
    "hook",
    "gitea"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "cover": "c8 -x 'tests/**/*.mjs' --temp-directory build/tmp ava && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme src/hook-handler.mjs --section=API",
    "lint": "documentation lint src/hook-handler.mjs",
    "posttest": "markdown-doctest",
    "test": "ava"
  },
  "dependencies": {
    "raw-body": "^2.4.1"
  },
  "devDependencies": {
    "ava": "^2.2.0",
    "c8": "^5.0.2",
    "documentation": "^12.1.1",
    "esm": "^3.2.25",
    "got": "^9.6.0",
    "koa": "^2.7.0",
    "koa-better-router": "^2.1.1",
    "markdown-doctest": "^0.9.1",
    "semantic-release": "^15.13.19",
    "x-hub-signature": "^1.2.0"
  },
  "engines": {
    "node": ">=10.16.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/koa-github-hook-handler.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/koa-github-hook-handler/issues"
  },
  "homepage": "https://github.com/arlac77/koa-github-hook-handler#readme",
  "ava": {
    "require": [
      "esm"
    ],
    "extensions": [
      "mjs"
    ],
    "babel": false,
    "compileEnhancements": false,
    "files": [
      "tests/*-test.mjs"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template-esm-only.git"
    }
  }
}
