{
  "name": "koa-github-hook-handler",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "type": "module",
  "main": "./src/hook-handler.mjs",
  "exports": {
    ".": "./src/hook-handler.mjs"
  },
  "description": "handle github/gitea/bitbucket webhook requests",
  "keywords": [
    "bitbucket",
    "gitea",
    "github",
    "hook",
    "koa"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "test": "ava --timeout 2m",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme ./src/hook-handler.mjs --section=API",
    "lint": "documentation lint ./src/hook-handler.mjs"
  },
  "dependencies": {
    "raw-body": "^2.4.1"
  },
  "devDependencies": {
    "ava": "^3.8.2",
    "c8": "^7.2.0",
    "documentation": "^13.0.1",
    "got": "^11.0.1",
    "koa": "^2.11.0",
    "koa-better-router": "^2.1.1",
    "semantic-release": "^17.0.8",
    "x-hub-signature": "^1.2.0"
  },
  "engines": {
    "node": ">=12.17.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/koa-github-hook-handler.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/koa-github-hook-handler/issues"
  },
  "homepage": "https://github.com/arlac77/koa-github-hook-handler#readme",
  "template": {
    "inheritFrom": [
      "arlac77/template-esm-only",
      "arlac77/template-github"
    ]
  }
}
